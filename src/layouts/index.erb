<% content_for :head do %>
    <%= fonts('Merriweather') %>
    <%= stylesheet_inline_tag 'index' %>
<% end %>
<% wrap_layout :core do %>
    <header>
      <h1>Sahil Muthoo</h1>
    </header>
    <% blog.articles.each do |article| %>
        <article>
          <h1>
            <time><%= article_date(article) %></time>
            <a href="<%= article.url %>"><%= article.title %></a>
          </h1>
        </article>
        <hr/>
    <% end %>
    <%= partial 'partials/footer' %>
<% end %>
