@font-face {
  font-family: 'Fira Code';
  src: font-url('FiraCode-Regular.woff2') format('woff2'),
  font-url('FiraCode-Regular.woff') format('woff');
  font-weight: 400;
  font-style: normal;
}

<%= Rouge::Themes::Gruvbox.mode(:light).render(scope: '.syntax-highlight') %>

* {
  margin: 0;
  padding: 0;
}

body {
  font-family: "Fira Code", Consolas, Menlo, Inconsolata, "Courier New", monospace;
  padding: 0 4rem;
  font-feature-settings: "calt" 1;
  max-width: 43.75rem;
  margin: 0 auto;

  .syntax-highlight {
    overflow: auto;
    padding: .5rem 1rem;
    line-height: 1.3;
    margin-top: 1.92rem;
    code {
      font-family: "Fira Code", Consolas, Menlo, Inconsolata, "Courier New", monospace;
      font-feature-settings: "calt" 1;
      font-size: 0.8rem;
    }
  }
}
